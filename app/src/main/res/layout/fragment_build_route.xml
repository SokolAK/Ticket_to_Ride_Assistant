<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:id="@+id/build_route_frag">

    <Spinner
        android:id="@+id/spinner_city1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinner_city2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/details_panel"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/ic_carriage"
            android:foregroundTint="@color/colorText"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/car_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:layout_weight="2" />
        <ImageView
            android:id="@+id/loco_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/ic_loco"
            android:foregroundTint="@color/colorText"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/loco_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:layout_weight="2" />
    </LinearLayout>


    <include
        android:id="@+id/cards"
        layout="@layout/fragment_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"/>

    <LinearLayout
        android:id="@+id/draw_buttons_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/reset_icon"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_cached_black_24dp" />
        <ImageView
            android:id="@+id/accept_icon"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:foregroundTint="#2B2B2B"
            app:srcCompat="@drawable/ic_check_circle_black_24dp" />
    </LinearLayout>


</LinearLayout>