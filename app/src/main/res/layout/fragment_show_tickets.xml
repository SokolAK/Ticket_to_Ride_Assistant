<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackDark"
    android:orientation="vertical"
    tools:context="pl.sokolak.TicketToRideAssistant.Fragments.MainActivity">

    <Button
        android:id="@+id/draw_ticket"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/text_margin"
        android:background="@drawable/button_green"
        android:text="@string/draw_ticket"
        android:textSize="@dimen/text_size"
        android:textColor="#80000000" />

    <TextView
        android:id="@+id/tickets_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_marginTop="@dimen/text_margin"
        android:textSize="@dimen/text_size"
        android:text="@string/tickets_header" />

    <Switch
        android:id="@+id/switch_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/locked"
        android:textColor="@color/colorReset"
        android:textSize="@dimen/lock_text_size"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/delete_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/delete_comment"
        android:textColor="@color/colorReset"
        android:textSize="@dimen/lock_text_size"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/list_tickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackLight" />

</LinearLayout>