<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackDark"
    android:orientation="vertical"
    tools:context="pl.sokolak.TicketToRideAssistant.Fragments.MenuActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_logo_size"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_app_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/colorText"
        android:textSize="@dimen/menu_header_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_header2_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorText"
        android:gravity="center"
        android:text="@string/choose_game"
        android:textSize="@dimen/menu_header2_text_size"
        android:textColor="@color/colorBackDark" />

    <ListView
        android:id="@+id/games_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackLight"
        android:entries="@array/games" />

</LinearLayout>