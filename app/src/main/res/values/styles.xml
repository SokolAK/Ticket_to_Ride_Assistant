<resources>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="HeaderTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorMenu</item>
    </style>

    <style name="MenuTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="listPreferredItemHeightSmall">@dimen/drawer_item_height</item>
        <item name="android:textColor">@color/colorMenu</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12sp</item>
        <item name="android:background">@drawable/ic_spinnerbackground</item>
    </style>

    <style name="HelpText" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">@dimen/help_paragraph_text_size</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
    <style name="HelpHeader" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">@dimen/help_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
</resources>